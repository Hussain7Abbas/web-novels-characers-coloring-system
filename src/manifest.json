{
    "manifest_version": 3,
    "name": "Kolnovels Characters Colors",
    "version": "10.1.3",
    "description": "Coloring novels' characters names",
    "content_scripts": [
        {
            "matches": [
                "https://kolnovel.org/*/",
                "https://kolnovel.me/*/",
                "https://sunovels.com/novel/*/*",
                "https://rewayat.club/*",
                "https://riwyat.com/novel/*/*/",
                "https://riwyat.org/novel/*/*/",
                "file:///home/*",
                "https://www.mtlnovel.com/*/*/",
                "https://ar-novel.com/novel/*/*/*/",
                "https://novelbin.com/b/*/*"
            ],
            "js": [
                "./utils/general.js",
                "content.js"
            ]
        }
    ],
    "action": {
        "default_icon": "assets/icon.png",
        "default_popup": "index.html",
        "default_title": "Coloring novels' characters names"
    },
    "icons": {
        "16": "assets/icon.png",
        "32": "assets/icon.png",
        "48": "assets/icon.png",
        "128": "assets/icon.png"
    },
    "permissions": [
        "tabs",
        "storage"
    ]
}