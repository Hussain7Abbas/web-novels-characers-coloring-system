{
    "manifest_version": 3,
    "name": "Kolnovels Characters Colors",
    "version": "9.0",
    "description": "Coloring novels' characters names",
    "content_scripts": [
        {
            "matches": [
                "https://kolnovel.com/*/",
                "https://sunovels.com/novel/*/*",
                "https://rewayat.club/*",
                "https://riwyat.com/novel/*/*/",
                "file:///home/*",
                "https://mtlnovel.com/*/*/"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_icon": "assets/icon.png",
        "default_popup": "index.html",
        "default_title": "Coloring novels' characters names"
    },
    "icons": {
        "16": "assets/icon.png",
        "32": "assets/icon.png",
        "48": "assets/icon.png",
        "128": "assets/icon.png"
    },
    "permissions": [
        "tabs",
        "storage"
    ]
}