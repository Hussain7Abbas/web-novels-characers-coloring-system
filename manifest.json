{
"manifest_version": 2,
"name": "Kolnovels Characters Colors",
"version": "2.0",
"description": "Coloring novels' characters names",

"content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
}],

"browser_action" : {
    "default_icon" : "icon.png",
    "default_popup" : "index.html",
    "default_title" : "Coloring novels' characters names"
},
"icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128":"icon.png"
   },

"permissions" : ["tabs", "storage"]
}