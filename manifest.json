{
"manifest_version": 2,
"name": "Kolnovels Characters Colors",
"version": "1.0",
"description": "Coloring novels' characters names",

"background": {
    "scripts": ["background.js"]
},

"content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
}],

"browser_action" : {
    "default_icon" : "images/icon.png",
    "default_popup" : "index.html",
    "default_title" : "Coloring novels' characters names"
},
"icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128":"images/icon.png"
   },

"permissions" : ["tabs"]
}